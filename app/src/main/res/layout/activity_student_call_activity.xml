<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activities.Student_call_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#00BFA5"
        android:id="@+id/subject_name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="teacher_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#00BFA5"
        android:id="@+id/techer_name"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/filled_green"
        android:onClick="accept"
        android:text="Accept"
        android:textColor="#fff"
        android:textStyle="bold" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/filled_ligt_orange"
        android:onClick="reject"
        android:text="Reject"
        android:textColor="#fff"
        android:textStyle="bold" />


</LinearLayout>